{
    "name": "adapt-emmet-keymap",
    "displayName": "adapt-emmet-keymap",
    "description": "Emmet keymap from me.",
    "icon": "./IMG/Emmet-01.png",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.58.0"
    },
    "categories": [
        "Keymaps"
    ],
    "contributes": {
        "keybindings": [
            {
                "mac": "cmd+shift+a",
                "key": "ctrl+shift+a",
                "command": "editor.emmet.action.balanceOut",
                "when": "editorTextFocus"
            },
            {
                "key": "alt+.",
                "command": "editor.emmet.action.nextEditPoint",
                "when": "editorTextFocus"
            },
            {
                "key": "alt+,",
                "command": "editor.emmet.action.prevEditPoint",
                "when": "editorTextFocus"
            },
            {
                "mac": "cmd+alt+.",
                "key": "ctrl+alt+.",
                "command": "editor.emmet.action.selectNextItem",
                "when": "editorTextFocus"
            },
            {
                "mac": "cmd+alt+,",
                "key": "ctrl+alt+,",
                "command": "editor.emmet.action.selectPrevItem",
                "when": "editorTextFocus"
            },


            {
                "key": "alt+e alt+e",
                "command": "editor.emmet.action.expandAbbreviation",
                "when": "editorTextFocus"
            },
            {
                "key": "alt+e alt+;",
                "command": "editor.emmet.action.removeTag",
                "when": "editorTextFocus"
            },
            {
                "key": "alt+e alt+'",
                "command": "editor.emmet.action.updateTag",
                "when": "editorTextFocus"
            },
            {
                "key": "alt+e alt+w",
                "command": "editor.emmet.action.wrapWithAbbreviation",
                "when": "editorTextFocus"
            }
        ],
        "commands": [
            {
            	"command": "editor.emmet.action.expandAbbreviation",
            	"title": "Expand Abbreviation"
            },
            {
            	"command": "emmet.expandAbbreviation",
            	"title": "Emmet: Expand Abbreviation"
            }
        ],
        "menus": {
            "editor/title": [
                {"command": "workbench.action.showEmmetCommands", "group": "2"},
                {
                    "submenu": "emmet-all-commands",
                    "group": "2"
                }
            ],
            "emmet-all-commands": [
                {"command": "editor.emmet.action.expandAbbreviation", "group": "1"},
                {"command": "editor.emmet.action.balanceIn"},
                {"command": "editor.emmet.action.balanceOut"},
                {"command": "editor.emmet.action.decrementNumberByOne"},
                {"command": "editor.emmet.action.decrementNumberByOneTenth"},
                {"command": "editor.emmet.action.decrementNumberByTen"},
                {"command": "editor.emmet.action.evaluateMathExpression"},
                {"command": "editor.emmet.action.incrementNumberByOne"},
                {"command": "editor.emmet.action.incrementNumberByOneTenth"},
                {"command": "editor.emmet.action.incrementNumberByTen"},
                {"command": "editor.emmet.action.matchTag"},
                {"command": "editor.emmet.action.mergeLines"},
                {"command": "editor.emmet.action.nextEditPoint"},
                {"command": "editor.emmet.action.prevEditPoint"},
                {"command": "editor.emmet.action.reflectCSSValue"},
                {"command": "editor.emmet.action.removeTag"},
                {"command": "editor.emmet.action.selectNextItem"},
                {"command": "editor.emmet.action.selectPrevItem"},
                {"command": "editor.emmet.action.splitJoinTag"},
                {"command": "editor.emmet.action.toggleComment"},
                {"command": "editor.emmet.action.updateImageSize"},
                {"command": "editor.emmet.action.updateTag"},
                {"command": "editor.emmet.action.wrapWithAbbreviation"}
            ]
        },
        "submenus": [
            {
                "id": "emmet-all-commands",
                "label": "Emmet"
            }
        ]
    }
}