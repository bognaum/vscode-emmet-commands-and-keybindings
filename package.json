{
    "name": "emmet-commands-and-keybindings",
    "displayName": "Emmet commands and keybindings",
    "description": "Added to editor title menu of all Emmet commands amd some keybindings.",
    "icon": "emmet-bognaum-4.png",
    "version": "2.0.2",
    "publisher": "Bognaum",
    "repository": {
        "type": "git",
        "url": "https://github.com/bognaum/vscode-emmet-commands-and-keybindings.git"
    },
    "engines": {
        "vscode": "^1.58.0"
    },
    "categories": [
        "Keymaps",
        "Other"
    ],
    "keywords": [
        "Emmet",
        "Emmet action",
        "Emmet actions",
        "Emmet command",
        "Emmet commands",
        "Emmet keybindings",
        "Emmet shortcuts",
        "Emmet keymap",
        "Emmet menu",
        "Emmet features",
        "use Emmet",
        "HTML",
        "HTML layout",
        "fast HTML layout",
        "edit HTML",
        "fast edit HTML",
        "HTML element",
        "wrap with abbreviation",
        "balance in",
        "balance inward",
        "balance out",
        "balance outward",
        "select tag",
        "select tag content",
        "edit tag",
        "delete tag",
        "remove tag",
        "rename tag"
    ],
    "contributes": {
        "keybindings": [
            {
                "mac": "cmd+shift+a",
                "key": "ctrl+shift+a",
                "command": "editor.emmet.action.balanceOut",
                "when": "editorTextFocus"
            },
            {
                "key": "alt+.",
                "command": "editor.emmet.action.nextEditPoint",
                "when": "editorTextFocus"
            },
            {
                "key": "alt+,",
                "command": "editor.emmet.action.prevEditPoint",
                "when": "editorTextFocus"
            },
            {
                "mac": "cmd+alt+.",
                "key": "ctrl+alt+.",
                "command": "editor.emmet.action.selectNextItem",
                "when": "editorTextFocus"
            },
            {
                "mac": "cmd+alt+,",
                "key": "ctrl+alt+,",
                "command": "editor.emmet.action.selectPrevItem",
                "when": "editorTextFocus"
            },


            {
                "key": "alt+e e",
                "command": "editor.emmet.action.expandAbbreviation",
                "when": "editorFocus && !editorReadonly"
            },
            {
                "key": "alt+e d",
                "command": "editor.emmet.action.removeTag",
                "when": "editorFocus && !editorReadonly"
            },
            {
                "key": "alt+e r",
                "command": "editor.emmet.action.updateTag",
                "when": "editorFocus && !editorReadonly"
            },
            {
                "key": "alt+e w",
                "command": "editor.emmet.action.wrapWithAbbreviation",
                "when": "editorFocus && !editorReadonly"
            },
            {
                "key": "alt+e alt+/",
                "command": "editor.emmet.action.toggleComment",
                "when": "editorFocus && !editorReadonly"
            },
            {
                "key": "alt+e m",
                "command": "editor.emmet.action.mergeLines",
                "when": "editorFocus && !editorReadonly"
            },
            {
                "key": "alt+e =",
                "command": "editor.emmet.action.evaluateMathExpression",
                "when": "editorFocus && !editorReadonly"
            }
        ],
        "commands": [
            {
                "command": "editor.emmet.action.expandAbbreviation",
                "title": "Emmet: Expand Abbreviation"
            },
            {
                "command": "emmet.expandAbbreviation",
                "title": "Emmet: Expand Abbreviation"
            },

            {
                "command": "editor.emmet.action.balanceIn",
                "title": "Emmet: HTML - Select - Balance In"
            },
            {
                "command": "editor.emmet.action.balanceOut",
                "title": "Emmet: HTML - Select - Balance Out"
            },
            {
                "command": "editor.emmet.action.matchTag",
                "title": "Emmet: HTML - Go to - Match Tag"
            },
            {
                "command": "editor.emmet.action.nextEditPoint",
                "title": "Emmet: HTML - Go to - Next Edit Point"
            },
            {
                "command": "editor.emmet.action.prevEditPoint",
                "title": "Emmet: HTML - Go to - Prev Edit Point"
            },
            {
                "command": "editor.emmet.action.removeTag",
                "title": "Emmet: HTML - Delete Tag"
            },
            {
                "command": "editor.emmet.action.selectNextItem",
                "title": "Emmet: HTML - Select - Next Item"
            },
            {
                "command": "editor.emmet.action.selectPrevItem",
                "title": "Emmet: HTML - Select - Previous Item"
            },
            {
                "command": "editor.emmet.action.splitJoinTag",
                "title": "Emmet: HTML - Split / Join Tag"
            },
            {
                "command": "editor.emmet.action.updateTag",
                "title": "Emmet: HTML - Rename Tag"
            },
            {
                "command": "editor.emmet.action.wrapWithAbbreviation",
                "title": "Emmet: HTML - Wrap With Abbreviation"
            },
            {
                "command": "editor.emmet.action.toggleComment",
                "title": "Emmet: HTML - Toggle Comment"
            },
            {
                "command": "editor.emmet.action.reflectCSSValue",
                "title": "Emmet: Reflect CSS Value"
            },
            {
                "command": "editor.emmet.action.mergeLines",
                "title": "Emmet: Merge Lines"
            },
            {
                "command": "editor.emmet.action.updateImageSize",
                "title": "Emmet: Update ImageSize"
            },
            {
                "command": "editor.emmet.action.evaluateMathExpression",
                "title": "Emmet: Evaluate Math Expression"
            },
            {
                "command": "editor.emmet.action.incrementNumberByOne",
                "title": "Emmet: Number - Increment - By One"
            },
            {
                "command": "editor.emmet.action.incrementNumberByOneTenth",
                "title": "Emmet: Number - Increment - By One Tenth"
            },
            {
                "command": "editor.emmet.action.incrementNumberByTen",
                "title": "Emmet: Number - Increment - By Ten"
            },
            {
                "command": "editor.emmet.action.decrementNumberByOne",
                "title": "Emmet: Number - Decrement - By One"
            },
            {
                "command": "editor.emmet.action.decrementNumberByOneTenth",
                "title": "Emmet: Number - Decrement - By One Tenth"
            },
            {
                "command": "editor.emmet.action.decrementNumberByTen",
                "title": "Emmet: Number - Decrement - By Ten"
            }
        ],
        "menus": {
            "editor/title": [
                {"command": "workbench.action.showEmmetCommands", "group": "2"},
                {
                    "submenu": "emmet-all-commands",
                    "group": "2"
                }
            ],
            "emmet-all-commands": [
                {"command": "editor.emmet.action.expandAbbreviation",        "group": "1"},

                {"command": "editor.emmet.action.matchTag",                  "group": "2"},
                {"command": "editor.emmet.action.nextEditPoint",             "group": "2"},
                {"command": "editor.emmet.action.prevEditPoint",             "group": "2"},

                {"command": "editor.emmet.action.balanceIn",                 "group": "3"},
                {"command": "editor.emmet.action.balanceOut",                "group": "3"},
                {"command": "editor.emmet.action.selectNextItem",            "group": "3"},
                {"command": "editor.emmet.action.selectPrevItem",            "group": "3"},
                
                {"command": "editor.emmet.action.splitJoinTag",              "group": "4"},
                {"command": "editor.emmet.action.removeTag",                 "group": "4"},
                {"command": "editor.emmet.action.updateTag",                 "group": "4"},
                {"command": "editor.emmet.action.wrapWithAbbreviation",      "group": "4"},
                {"command": "editor.emmet.action.toggleComment",             "group": "4"},

                {"command": "editor.emmet.action.reflectCSSValue",           "group": "5"},
                {"command": "editor.emmet.action.mergeLines",                "group": "5"},
                {"command": "editor.emmet.action.updateImageSize",           "group": "5"},
                {"command": "editor.emmet.action.evaluateMathExpression",    "group": "5"},

                {"command": "editor.emmet.action.incrementNumberByOne",      "group": "6"},
                {"command": "editor.emmet.action.incrementNumberByOneTenth", "group": "6"},
                {"command": "editor.emmet.action.incrementNumberByTen",      "group": "6"},

                {"command": "editor.emmet.action.decrementNumberByOne",      "group": "7"},
                {"command": "editor.emmet.action.decrementNumberByOneTenth", "group": "7"},
                {"command": "editor.emmet.action.decrementNumberByTen",      "group": "7"}
            ]
        },
        "submenus": [
            {
                "id": "emmet-all-commands",
                "label": "Emmet"
            }
        ]
    }
}